---
 interface Props {
    title: string;
    description: string;
    
  }

const { title, description} = Astro.props;
---

<div class="bg-gray-800 rounded-2xl shadow p-6 flex flex-col items-center text-center">
  
  <h1 class="text-xl font-bold mb-2">{title}</h3>
  <p class="text-gray-200">{description}</p>
</div>