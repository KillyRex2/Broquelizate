// src/components/admin/SalesByCategory.astro
---
<canvas id="categoryChart" height="300"></canvas>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const ctx = document.getElementById('categoryChart').getContext('2d');
    
    new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: ['Anillos', 'Collares', 'Pendientes', 'Pulseras', 'Relojes'],
        datasets: [{
          data: [35, 25, 20, 15, 5],
          backgroundColor: [
            'rgb(59, 130, 246)',
            'rgb(16, 185, 129)',
            'rgb(245, 158, 11)',
            'rgb(139, 92, 246)',
            'rgb(236, 72, 153)'
          ],
          borderWidth: 0
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'right',
          }
        }
      }
    });
  });
</script>