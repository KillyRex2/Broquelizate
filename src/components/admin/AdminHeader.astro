// No se necesita lógica aquí, es un componente de presentación.
---
<style>
.switch {
  position: relative;
  height: 1.5rem;
  width: 3rem;
  cursor: pointer;
  appearance: none;
  -webkit-appearance: none;
  border-radius: 9999px;
  background-color: rgba(30, 30, 30, 0.6);
  transition: all .3s ease;
}

.switch:checked {
  background-color: rgba(243, 212, 38, 0.8);
}

.switch::before {
  position: absolute;
  content: "";
  left: calc(1.5rem - 1.6rem);
  top: calc(1.5rem - 1.6rem);
  display: block;
  height: 1.6rem;
  width: 1.6rem;
  cursor: pointer;
  border: 1px solid rgba(243, 212, 38, 0.8);
  border-radius: 9999px;
  background-color: #ffffff;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
  transition: all .3s ease;
}

.switch:hover::before {
  box-shadow: 0 0 0px 8px rgba(243, 212, 38, 0.3);
}

.switch:checked:hover::before {
  box-shadow: 0 0 0px 8px rgba(243, 212, 38, 0.5);
}

.switch:checked::before {
  transform: translateX(100%);
  border-color: #1E1E1E;
}
</style>

<header class="bg-gradient-to-r from-[#1E1E1E] to-[rgba(243,212,38,0.67)] shadow-2xl border-b border-[#F3D426] sticky top-0 z-50">
  <div class="mx-auto flex items-center justify-between px-6 py-4 max-w-7xl">

    <!-- Toggle & Logo -->
    <div class="flex items-center space-x-4">
      <!-- Switch Toggle -->
      <input slot="toggle" id="toggle-sidebar" type="checkbox" class="switch" aria-label="Toggle Sidebar" />
      <a href="/" class="text-2xl font-semibold text-white hover:text-[#F3D426] transition-colors">
        Broquelizate Admin
      </a>
    </div>

    <!-- Iconos y Avatar -->
    <div class="flex items-center space-x-6">
      <button class="p-2 rounded-full bg-[#1E1E1E] text-white hover:bg-[#333333] transition-shadow shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>
      </button>

      <button class="flex items-center focus:outline-none space-x-3">
        <img src="https://i.pravatar.cc/150?u=a042581f4e29026704d" alt="Avatar" class="h-10 w-10 rounded-full object-cover ring-2 ring-offset-2 ring-[#F3D426] shadow-inner">
        <span class="text-white font-medium">Admin</span>
      </button>
    </div>
  </div>
</header>
