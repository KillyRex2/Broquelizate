<script>
  const { signOut } = await import('auth-astro/client');

  
  // Add event listener to the logout element
  document.addEventListener('astro:page-load', () => {
    const logoutElem = document.querySelector('#logout') as HTMLLIElement;
    // Ensure the logout element exists before adding the event listener
    if (logoutElem) {
      logoutElem.addEventListener('click', async () => {
        await signOut();
        window.location.href = '/';
      });
    }
  });

</script>