// src/components/admin/ActivityFeed.astro
---
<div class="bg-white rounded-xl shadow-sm p-6">
  <h2 class="text-lg font-semibold text-gray-900 mb-4">Actividad Reciente</h2>
  
  <div class="space-y-4">
    <div class="flex">
      <div class="mr-3">
        <div class="bg-gray-200 border-2 border-dashed rounded-xl w-10 h-10" />
      </div>
      <div class="flex-1">
        <p class="text-sm"><span class="font-medium">Juan Pérez</span> realizó un pedido por $420.00</p>
        <p class="text-xs text-gray-500 mt-1">Hace 2 horas</p>
      </div>
    </div>
    
    <div class="flex">
      <div class="mr-3">
        <div class="bg-gray-200 border-2 border-dashed rounded-xl w-10 h-10" />
      </div>
      <div class="flex-1">
        <p class="text-sm"><span class="font-medium">María Rodríguez</span> agregó un nuevo producto</p>
        <p class="text-xs text-gray-500 mt-1">Hace 5 horas</p>
      </div>
    </div>
    
    <div class="flex">
      <div class="mr-3">
        <div class="bg-gray-200 border-2 border-dashed rounded-xl w-10 h-10" />
      </div>
      <div class="flex-1">
        <p class="text-sm"><span class="font-medium">Carlos Méndez</span> realizó un pedido por $780.00</p>
        <p class="text-xs text-gray-500 mt-1">Hace 1 día</p>
      </div>
    </div>
    
    <div class="flex">
      <div class="mr-3">
        <div class="bg-gray-200 border-2 border-dashed rounded-xl w-10 h-10" />
      </div>
      <div class="flex-1">
        <p class="text-sm"><span class="font-medium">Ana López</span> completó un pedido</p>
        <p class="text-xs text-gray-500 mt-1">Hace 2 días</p>
      </div>
    </div>
  </div>
  
  <button class="mt-4 w-full bg-gray-50 hover:bg-gray-100 text-gray-700 py-2 px-4 rounded-md text-sm font-medium">
    Ver toda la actividad
  </button>
</div>