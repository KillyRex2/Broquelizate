---
// src/pages/admin/index.astro
import AdminLayout from '@/layouts/AdminLayout.astro';
import StatsGrid from '@/components/admin/StatsGrid.astro';
import RevenueChart from '@/components/admin/RevenueChart.astro';
import RecentOrders from '@/components/admin/RecentOrders.astro';
import TopProducts from '../../components/admin/TopProducts.astro';
import ActivityFeed from '../../components/admin/ActivityFeed.astro';
import SalesByCategory from '../../components/admin/SalesByCategory.astro';

const pageTitle = "Panel de Administración";
---

<AdminLayout title={pageTitle}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
      <div class="flex space-x-4">
      <a href="/admin/products/new" class="inline-flex items-center bg-indigo-600 text-white px-4 py-2 rounded-lg font-medium transition hover:bg-indigo-700">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        Nuevo Producto
      </a>
        <button class="bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded-md flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
          Exportar
        </button>
      </div>
    </div>

    <StatsGrid />
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mt-8">
      <div class="lg:col-span-2">
        <div class="bg-white rounded-xl shadow-sm p-6">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-lg font-semibold text-gray-900">Ingresos Mensuales</h2>
          </div>
          <RevenueChart />
        </div>
      </div>
      
      <div class="bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-6">Ventas por Categoría</h2>
        <SalesByCategory />
      </div>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mt-6">
      <div class="lg:col-span-2">
        <RecentOrders />
      </div>
      
      <div class="space-y-6">
        <TopProducts />
        <ActivityFeed />
      </div>
    </div>
  </div>
</AdminLayout>